<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Resources.Styles.TemaOscuro">

    <!-- Colores principales -->
    <Color x:Key="PrimaryColor">#1E1E1E</Color>
    <Color x:Key="SecondaryColor">#2C2C2E</Color>
    <Color x:Key="AccentColor">#2E2E2E</Color>
    <Color x:Key="PrimaryAccentColor">#00FF99</Color>

    <!-- Texto -->
    <Color x:Key="TextColor">#FFFFFF</Color>
    <Color x:Key="PlaceholderColor">#AAAAAA</Color>
    <Color x:Key="ErrorTextColor">Red</Color>
    <Color x:Key="ButtonTextColor">Black</Color>

    <!-- Fondos -->
    <Color x:Key="BackgroundColor">#121212</Color>
    <Color x:Key="CardColor">#2C2C2E</Color>
    <Color x:Key="EntryBackgroundColor">#1E1E1E</Color>

    <Color x:Key="FlyoutTextColor">#FFFFFF</Color>

    <Color x:Key="Shell.ForegroundColor">#FFFFFF</Color>
    <Color x:Key="Shell.UnselectedColor">#AAAAAA</Color>
    <Color x:Key="Shell.TitleColor">#FFFFFF</Color>
    <Color x:Key="Shell.DisabledColor">#777777</Color>
    <Color x:Key="Shell.BackgroundColor">#121212</Color>

    <Color x:Key="BorderColor">#444444</Color>

    <Color x:Key="SeparatorColor" >#2E2E2E</Color>
</ResourceDictionary>