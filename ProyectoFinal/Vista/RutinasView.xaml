<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Vista.RutinasView"
             BackgroundColor="#121212"
             Shell.NavBarIsVisible="False"
             Title="Mis Rutinas">

    <Grid Padding="20" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Cabecera -->
        <StackLayout Grid.Row="0" Spacing="4">
            <Label Text="💪 Mis Rutinas"
                   FontSize="32"
                   TextColor="#00FF99"
                   FontAttributes="Bold" />
            <BoxView Color="#2E2E2E" HeightRequest="2" HorizontalOptions="Fill"/>
        </StackLayout>

        <!-- Contenido principal -->
        <Grid Grid.Row="1" ColumnSpacing="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Lista de rutinas -->
            <CollectionView ItemsSource="{Binding Rutinas}"
                            SelectionMode="Single"
                            SelectedItem="{Binding RutaSeleccionada}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#1E1E1E"
                               BorderColor="#2E2E2E"
                               CornerRadius="12"
                               Margin="5"
                               Padding="12"
                               HasShadow="False">
                            <StackLayout>
                                <Label Text="{Binding Nombre}"
                                       FontSize="18"
                                       TextColor="White"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Descripcion}"
                                       FontSize="14"
                                       TextColor="#AAAAAA" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Detalle de la rutina -->
            <StackLayout Grid.Column="1"
                         Padding="10"
                         Spacing="15"
                         IsVisible="{Binding DetallesVisible}">

                <Label Text="📝 Detalles"
                       FontSize="26"
                       TextColor="#00FF99"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <Frame BackgroundColor="#1E1E1E"
                       CornerRadius="12"
                       Padding="20"
                       HasShadow="False">
                    <StackLayout Spacing="10">
                        <Label Text="{Binding RutaSeleccionada.Nombre}"
                               FontSize="20"
                               TextColor="White"
                               FontAttributes="Bold" />

                        <Label Text="{Binding RutaSeleccionada.Descripcion}"
                               FontSize="14"
                               TextColor="#AAAAAA" />

                        <Label Text="🏋️ Ejercicios:"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#00FF99" />

                        <CollectionView ItemsSource="{Binding RutaSeleccionada.Ejercicios}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout Padding="5">
                                        <Label Text="{Binding Nombre}" FontSize="16" TextColor="White" />
                                        <Label Text="{Binding Categoria}" FontSize="14" TextColor="#AAAAAA" />
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Frame>

                <!-- Botón para agregar -->
                <Button Text="➕ Registrar Datos"
                        BackgroundColor="#00FF99"
                        TextColor="Black"
                        CornerRadius="10"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        Command="{Binding IrARegistrarRutinaCommand}" />
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>

