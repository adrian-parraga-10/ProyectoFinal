<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Vista.RutinasView"
             Title="Mis Rutinas">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Mis Rutinas" FontSize="32" HorizontalOptions="Center" />

        <!-- Lista de Rutinas -->
        <ListView ItemsSource="{Binding Rutinas}" 
                  SeparatorVisibility="Default" 
                  SelectedItem="{Binding RutaSeleccionada}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Nombre}" FontSize="20" />
                            <Label Text="{Binding Descripcion}" FontSize="16" TextColor="Gray"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Registrar Datos"
        Command="{Binding IrARegistrarRutinaCommand}" />

        <!-- Detalle de la Rutina Seleccionada -->
        <StackLayout Padding="10" IsVisible="{Binding DetallesVisible}">
            <Label Text="Detalles de la Rutina" FontSize="24" HorizontalOptions="Center" />
            <Label Text="{Binding RutaSeleccionada.Nombre}" FontSize="20" />
            <Label Text="{Binding RutaSeleccionada.Descripcion}" FontSize="16" TextColor="Gray" />

            <Label Text="Ejercicios:" FontSize="18" FontAttributes="Bold" />
            <ListView ItemsSource="{Binding RutaSeleccionada.Ejercicios}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding Nombre}" FontSize="18" />
                                <Label Text="{Binding Categoria}" FontSize="14" TextColor="Gray" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>

    </VerticalStackLayout>

</ContentPage>
