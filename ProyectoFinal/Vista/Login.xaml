<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ProyectoFinal.ViewModels"
             x:Class="ProyectoFinal.Login"
             xmlns:local="clr-namespace:ProyectoFinal"
             BackgroundColor="#121212">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="20"
                             VerticalOptions="CenterAndExpand"
                             HorizontalOptions="Center"
                             WidthRequest="300">

            <!-- Título grande -->
            <Label Text="Bienvenido de nuevo"
                   FontSize="32"
                   TextColor="#00FF99"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Subtítulo -->
            <Label Text="Empieza a entrenar y alimentarte mejor"
                   FontSize="16"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <!-- Campo Email -->
            <Frame CornerRadius="10"
                   Padding="10"
                   BackgroundColor="#1E1E1E">
                <Entry Text="{Binding Email}"
                       Placeholder="Correo electrónico"
                       Keyboard="Email"
                       TextColor="White"
                       PlaceholderColor="#AAAAAA"
                       BackgroundColor="Transparent" />
            </Frame>

            <!-- Campo Contraseña -->
            <Frame CornerRadius="10"
                   Padding="10"
                   BackgroundColor="#1E1E1E">
                <Entry Text="{Binding Password}"
                       Placeholder="Contraseña"
                       IsPassword="True"
                       TextColor="White"
                       PlaceholderColor="#AAAAAA"
                       BackgroundColor="Transparent" />
            </Frame>

            <!-- Botón -->
            <Button Text="Iniciar sesión"
                    Clicked="OnLoginButtonClicked"
                    BackgroundColor="#00FF99"
                    TextColor="Black"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    HeightRequest="50" />

            <!-- Estado -->
            <Label Text="{Binding StatusMessage}"
                   TextColor="Red"
                   FontSize="14"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

