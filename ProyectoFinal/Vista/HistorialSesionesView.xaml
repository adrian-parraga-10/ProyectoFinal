<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Vista.HistorialSesionesView"
             Title="Historial de Sesiones"
             BackgroundColor="#121212">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Historial de Sesiones"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>

            <CollectionView x:Name="SesionesCollection"
                            ItemsSource="{Binding Sesiones}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5"
                               Padding="15"
                               BorderColor="#4CAF50"
                               BackgroundColor="#1E1E1E"
                               CornerRadius="12"
                               HasShadow="True">
                            <VerticalStackLayout>
                                <Label Text="{Binding FechaSesion, StringFormat='Fecha: {0:dd/MM/yyyy HH:mm}'}"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="White"/>
                                <Label Text="{Binding Ejercicios.Count, StringFormat='Ejercicios realizados: {0}'}"
                                       FontSize="14"
                                       TextColor="White"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
