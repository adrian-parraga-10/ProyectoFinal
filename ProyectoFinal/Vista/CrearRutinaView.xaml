<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProyectoFinal.ViewsModel"
             x:Class="ProyectoFinal.Vista.CrearRutinaView"
             BackgroundColor="#121212"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <Grid Padding="20" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Cabecera -->
            <StackLayout Grid.Row="0" Spacing="4">
                <Label Text="🏋️ Crear Rutina"
                       FontSize="32"
                       TextColor="#00FF99"
                       FontAttributes="Bold" />
                <BoxView Color="#2E2E2E" HeightRequest="2" HorizontalOptions="Fill"/>
            </StackLayout>

            <!-- Contenido -->
            <StackLayout Grid.Row="1" Spacing="20">

                <!-- Nombre -->
                <Label Text="Nombre de la Rutina" TextColor="#EEEEEE" />
                <Entry Text="{Binding NombreRutina}"
                       Placeholder="Ej. Full Body"
                       BackgroundColor="#1E1E1E"
                       TextColor="White"
                       PlaceholderColor="#AAAAAA"
                       HeightRequest="40"
                       />

                <!-- Descripción -->
                <Label Text="Descripción" TextColor="#EEEEEE" />
                <Editor Text="{Binding DescripcionRutina}"
                        BackgroundColor="#1E1E1E"
                        TextColor="White"
                        Placeholder="Descripción breve..."
                        AutoSize="TextChanges"
                        HeightRequest="80"/>

                <!-- Lista de ejercicios disponibles -->
                <Label Text="Selecciona Ejercicios"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#00FF99" />

                <CollectionView ItemsSource="{Binding TodosEjercicios}" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#1E1E1E"
                                   BorderColor="#2E2E2E"
                                   CornerRadius="12"
                                   Margin="5"
                                   Padding="12"
                                   HasShadow="False">
                                <StackLayout Orientation="Horizontal" Spacing="10">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CrearRutinaViewModel}}, Path=ActualizarSeleccionCommand}"
                                            CommandParameter="{Binding .}" />
                                    </StackLayout.GestureRecognizers>
                                    <Label Text="{Binding Nombre}" FontSize="16" TextColor="White" FontAttributes="Bold"/>
                                    <Label Text="{Binding Categoria}" FontSize="14" TextColor="#AAAAAA"/>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Ejercicios seleccionados -->
                <Label Text="Ejercicios Seleccionados"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#00FF99"
                       Margin="0,20,0,0"/>

                <CollectionView ItemsSource="{Binding EjerciciosSeleccionados}" HeightRequest="150">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#1E1E1E"
                                   BorderColor="#2E2E2E"
                                   CornerRadius="12"
                                   Margin="5"
                                   Padding="12"
                                   HasShadow="False">
                                <StackLayout Orientation="Horizontal" Spacing="10">
                                    <Label Text="{Binding Nombre}" FontSize="16" TextColor="White" FontAttributes="Bold"/>
                                    <Label Text="{Binding Categoria}" FontSize="14" TextColor="#AAAAAA"/>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Botón para guardar -->
                <Button Text="💾 Guardar Rutina"
                        BackgroundColor="#00FF99"
                        TextColor="Black"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"
                        Command="{Binding GuardarRutinaCommand}"/>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
