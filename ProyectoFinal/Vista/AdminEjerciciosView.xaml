<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Vista.AdminEjerciciosView"
             BackgroundColor="#121212"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="🛠 Administración de Ejercicios"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#00FF99"
                   HorizontalOptions="Center" />

            <Entry Placeholder="🔍 Buscar..."
                   Text="{Binding Busqueda}"
                   TextColor="White"
                   PlaceholderColor="#AAAAAA" />

            <!-- Lista -->
            <CollectionView ItemsSource="{Binding EjerciciosFiltrados}"
                            SelectionMode="Single"
                            SelectedItem="{Binding EjercicioSeleccionado}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#1E1E1E" CornerRadius="12" Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Nombre}" FontSize="18" TextColor="White" FontAttributes="Bold"/>
                                <Label Text="{Binding Categoria}" FontSize="14" TextColor="#AAAAAA"/>
                                <Label Text="{Binding Nivel}" FontSize="14" TextColor="#AAAAAA"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Formulario -->
            <Frame BackgroundColor="#1E1E1E" Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Entry Placeholder="Nombre" Text="{Binding EjercicioSeleccionado.Nombre}" TextColor="White"/>
                    <Entry Placeholder="Categoría" Text="{Binding EjercicioSeleccionado.Categoria}" TextColor="White"/>
                    <Entry Placeholder="Descripción" Text="{Binding EjercicioSeleccionado.Descripcion}" TextColor="White"/>
                    <Entry Placeholder="Nivel" Text="{Binding EjercicioSeleccionado.Nivel}" TextColor="White"/>

                    <Label Text="Músculos trabajados:" TextColor="#00FF99" FontAttributes="Bold"/>

                    <!-- Lista de músculos trabajados -->
                    <CollectionView ItemsSource="{Binding EjercicioSeleccionado.MusculosTrabajados}" SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <HorizontalStackLayout Spacing="10">
                                    <!-- Campo para el músculo -->
                                    <Entry Text="{Binding .,Mode=TwoWay}" Placeholder="Músculo" TextColor="White"/>

                                    <!-- Botón para eliminar un músculo -->
                                    <Button Text="❌" 
                                            Command="{Binding BindingContext.EliminarMusculoCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#00FF99"
                                            TextColor="Red" />
                                </HorizontalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Botón para agregar un nuevo músculo -->
                    <Button Text="➕ Agregar músculo"
        Command="{Binding AgregarMusculoCommand}"
        BackgroundColor="#00FF99"
        TextColor="Black" />


                </VerticalStackLayout>
            </Frame>

            <!-- Botones -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="💾 Guardar" Command="{Binding GuardarCommand}" BackgroundColor="#00FF99" TextColor="Black"/>
                <Button Text="🗑 Eliminar" Command="{Binding EliminarCommand}" BackgroundColor="#FF5555" TextColor="White"/>
                <Button Text="➕ Nuevo" Command="{Binding NuevoCommand}" BackgroundColor="#5555FF" TextColor="White"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
