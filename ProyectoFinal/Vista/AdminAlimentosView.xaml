<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Vista.AdminAlimentosView"
             BackgroundColor="#121212"
             Shell.NavBarIsVisible="False"
             Title="Gestión de Alimentos">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Encabezado -->
            <Label Text="🍎 Gestión de Alimentos"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#00FF99"
                   HorizontalOptions="Center" />

            <!-- Campo de búsqueda -->
            <Entry Placeholder="🔍 Buscar alimento..." 
                   Text="{Binding Busqueda}" 
                   TextColor="White"
                   PlaceholderColor="#AAAAAA"
                   BackgroundColor="#1E1E1E"
                   Margin="0,0,0,10"/>

            <!-- Lista de alimentos -->
            <Label Text="📋 Lista de Alimentos:" 
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="18" />

            <CollectionView ItemsSource="{Binding AlimentosFiltrados}"
                            SelectionMode="Single"
                            SelectedItem="{Binding AlimentoSeleccionado}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#1E1E1E"
                               BorderColor="#2E2E2E"
                               CornerRadius="12"
                               Margin="5"
                               Padding="12">
                            <VerticalStackLayout>
                                <Label Text="{Binding Nombre}" FontSize="18" TextColor="White" FontAttributes="Bold"/>
                                <Label Text="{Binding Categoria}" FontSize="14" TextColor="#AAAAAA"/>
                                <Label Text="{Binding Calorias, StringFormat='🔥 {0} cal'}" FontSize="14" TextColor="#AAAAAA"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Separador visual -->
            <BoxView HeightRequest="2" BackgroundColor="#2E2E2E" Margin="0,10"/>

            <!-- Formulario de edición / nuevo -->
            <Label Text="✍️ Editar / Agregar Alimento"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="#00FF99"
                   HorizontalOptions="Center" />

            <Frame BackgroundColor="#1E1E1E" Padding="15" CornerRadius="10">
                <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="10" ColumnSpacing="10">
                    <Label Grid.Row="0" Grid.Column="0" Text="Nombre:" TextColor="White" VerticalOptions="Center" />
                    <Entry Grid.Row="0" Grid.Column="1" Placeholder="Nombre" Text="{Binding AlimentoSeleccionado.Nombre}" TextColor="White"/>

                    <Label Grid.Row="1" Grid.Column="0" Text="Categoría:" TextColor="White" VerticalOptions="Center" />
                    <Entry Grid.Row="1" Grid.Column="1" Placeholder="Categoría" Text="{Binding AlimentoSeleccionado.Categoria}" TextColor="White"/>

                    <Label Grid.Row="2" Grid.Column="0" Text="Calorías:" TextColor="White" VerticalOptions="Center" />
                    <Entry Grid.Row="2" Grid.Column="1" Placeholder="Calorías" Keyboard="Numeric" Text="{Binding AlimentoSeleccionado.Calorias}" TextColor="White"/>

                    <Label Grid.Row="3" Grid.Column="0" Text="Proteínas:" TextColor="White" VerticalOptions="Center" />
                    <Entry Grid.Row="3" Grid.Column="1" Placeholder="Proteínas" Keyboard="Numeric" Text="{Binding AlimentoSeleccionado.Proteinas}" TextColor="White"/>

                    <Label Grid.Row="4" Grid.Column="0" Text="Carbohidratos:" TextColor="White" VerticalOptions="Center" />
                    <Entry Grid.Row="4" Grid.Column="1" Placeholder="Carbohidratos" Keyboard="Numeric" Text="{Binding AlimentoSeleccionado.Carbohidratos}" TextColor="White"/>

                    <Label Grid.Row="5" Grid.Column="0" Text="Grasas:" TextColor="White" VerticalOptions="Center" />
                    <Entry Grid.Row="5" Grid.Column="1" Placeholder="Grasas" Keyboard="Numeric" Text="{Binding AlimentoSeleccionado.Grasas}" TextColor="White"/>

                    <Label Grid.Row="6" Grid.Column="0" Text="Fibra:" TextColor="White" VerticalOptions="Center" />
                    <Entry Grid.Row="6" Grid.Column="1" Placeholder="Fibra" Keyboard="Numeric" Text="{Binding AlimentoSeleccionado.Fibra}" TextColor="White"/>

                    <Label Grid.Row="7" Grid.Column="0" Text="Origen:" TextColor="White" VerticalOptions="Center" />
                    <Entry Grid.Row="7" Grid.Column="1" Placeholder="Origen" Text="{Binding AlimentoSeleccionado.Origen}" TextColor="White"/>
                </Grid>
            </Frame>


            <!-- Botones de acción -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="💾 Guardar" Command="{Binding GuardarAlimentoCommand}" BackgroundColor="#00FF99" TextColor="Black"/>
                <Button Text="🗑 Eliminar" Command="{Binding EliminarAlimentoCommand}" BackgroundColor="#FF5555" TextColor="White"/>
                <Button Text="➕ Nuevo" Command="{Binding NuevoAlimentoCommand}" BackgroundColor="#5555FF" TextColor="White"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
