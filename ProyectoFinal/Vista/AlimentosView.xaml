<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Vista.AlimentosView"
             BackgroundColor="#121212"
             Shell.NavBarIsVisible="False">

    <Grid Padding="20" RowSpacing="20">
        <!-- Filas: Cabecera + Contenido -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Cabecera -->
        <StackLayout Grid.Row="0" Spacing="4">
            <Label Text="ðŸ§ƒ Alimentos"
                   FontSize="32"
                   TextColor="#00FF99"
                   FontAttributes="Bold" />
            <BoxView Color="#2E2E2E" HeightRequest="2" HorizontalOptions="Fill"/>
        </StackLayout>

        <SearchBar Placeholder="Buscar alimento..."
           Text="{Binding TextoBusqueda}"
           TextColor="White"
           PlaceholderColor="#888"
           BackgroundColor="#1E1E1E"/>


        <!-- Contenido: Lista y detalles -->
        <Grid Grid.Row="1" ColumnSpacing="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Lista de alimentos -->
            <CollectionView ItemsSource="{Binding Alimentos}"
                    SelectionMode="Single"
                    SelectedItem="{Binding AlimentoSeleccionado}"
                    SelectionChanged="OnItemTapped">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#1E1E1E"
                               BorderColor="#2E2E2E"
                               CornerRadius="12"
                               Margin="5"
                               Padding="12"
                               HasShadow="False">
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <Image Source="{Binding Imagen}"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       Aspect="AspectFill"
                                       VerticalOptions="Center" />
                                <StackLayout>
                                    <Label Text="{Binding Nombre}"
                                           FontSize="18"
                                           TextColor="White"
                                           FontAttributes="Bold" />
                                    <Label Text="{Binding Categoria}"
                                           FontSize="14"
                                           TextColor="#AAAAAA" />
                                    <Label Text="{Binding Calorias, StringFormat='{0} cal'}"
                                           FontSize="14"
                                           TextColor="#AAAAAA" />
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


            <!-- Detalles del alimento -->
            <StackLayout Grid.Column="1"
                         Padding="10"
                         Spacing="15">
                <Label Text="Detalles"
                       FontSize="26"
                       TextColor="#00FF99"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <Frame BackgroundColor="#1E1E1E"
                       CornerRadius="12"
                       Padding="20"
                       HasShadow="False">

                    <Grid ColumnSpacing="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>

                        <!-- Texto de detalles -->
                        <StackLayout Grid.Column="0" Spacing="10">
                            <Label Text="{Binding AlimentoSeleccionado.Nombre}"
                                   FontSize="20"
                                   TextColor="White"
                                   FontAttributes="Bold" />

                            <Label Text="{Binding AlimentoSeleccionado.Categoria, StringFormat='CategorÃ­a: {0}'}"
                                   FontSize="14"
                                   TextColor="#AAAAAA" />

                            <Label Text="{Binding AlimentoSeleccionado.Calorias, StringFormat='CalorÃ­as: {0}'}"
                                   FontSize="14"
                                   TextColor="#AAAAAA" />

                            <Label Text="{Binding AlimentoSeleccionado.Proteinas, StringFormat='ProteÃ­nas: {0}g'}"
                                   FontSize="14"
                                   TextColor="#AAAAAA" />

                            <Label Text="{Binding AlimentoSeleccionado.Carbohidratos, StringFormat='Carbohidratos: {0}g'}"
                                   FontSize="14"
                                   TextColor="#AAAAAA" />

                            <Label Text="{Binding AlimentoSeleccionado.Grasas, StringFormat='Grasas: {0}g'}"
                                   FontSize="14"
                                   TextColor="#AAAAAA" />

                            <Label Text="{Binding AlimentoSeleccionado.Fibra, StringFormat='Fibra: {0}g'}"
                                   FontSize="14"
                                   TextColor="#AAAAAA" />

                            <Label Text="{Binding AlimentoSeleccionado.Origen, StringFormat='Origen: {0}'}"
                                   FontSize="14"
                                   TextColor="#AAAAAA" />
                        </StackLayout>

                        <!-- Imagen a la derecha -->
                        <Image Grid.Column="1"
                               Source="{Binding AlimentoSeleccionado.Imagen}"
                               Aspect="AspectFill"
                               HeightRequest="160"
                               WidthRequest="160"
                               HorizontalOptions="Start"
                               VerticalOptions="Center"
                               Margin="10"/>
                    </Grid>
                </Frame>


            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>
