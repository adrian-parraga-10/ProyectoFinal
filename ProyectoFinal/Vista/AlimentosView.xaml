<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Vista.AlimentosView"
             Title="Alimentos">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Lista de Alimentos" FontSize="32" HorizontalOptions="Center" />

        <ListView ItemsSource="{Binding Alimentos}"
                  SeparatorVisibility="Default">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Nombre}" FontSize="20" />
                            <Label Text="{Binding Categoria}" FontSize="16" TextColor="Gray"/>
                            <Label Text="{Binding Calorias}" FontSize="16" TextColor="Gray"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label Text="{Binding Mensaje}" TextColor="Red" HorizontalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>
