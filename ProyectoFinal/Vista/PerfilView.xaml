<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Vista.PerfilView"
             BackgroundColor="#121212"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="20"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             WidthRequest="320">

            <!-- TÃ­tulo -->
            <Label Text="ðŸ‘¤ Perfil del Usuario"
                   FontSize="30"
                   TextColor="#00FF99"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <BoxView Color="#2E2E2E" HeightRequest="2" HorizontalOptions="Fill" />

            <!-- Entradas -->
            <Frame CornerRadius="10" BackgroundColor="#1E1E1E" Padding="10">
                <Entry Placeholder="Nombre"
                       Text="{Binding Usuario.Nombre}"
                       TextColor="White"
                       PlaceholderColor="#AAAAAA"
                       BackgroundColor="Transparent" />
            </Frame>

            <Frame CornerRadius="10" BackgroundColor="#1E1E1E" Padding="10">
                <Entry Placeholder="Email"
                       Text="{Binding Usuario.Email}"
                       TextColor="White"
                       PlaceholderColor="#AAAAAA"
                       BackgroundColor="Transparent" />
            </Frame>

            <Frame CornerRadius="10" BackgroundColor="#1E1E1E" Padding="10">
                <Entry Placeholder="Edad"
                       Keyboard="Numeric"
                       Text="{Binding Usuario.Edad}"
                       TextColor="White"
                       PlaceholderColor="#AAAAAA"
                       BackgroundColor="Transparent" />
            </Frame>

            <Frame CornerRadius="10" BackgroundColor="#1E1E1E" Padding="10">
                <Entry Placeholder="Sexo"
                       Text="{Binding Usuario.Sexo}"
                       TextColor="White"
                       PlaceholderColor="#AAAAAA"
                       BackgroundColor="Transparent" />
            </Frame>

            <Frame CornerRadius="10" BackgroundColor="#1E1E1E" Padding="10">
                <Entry Placeholder="Peso (kg)"
                       Keyboard="Numeric"
                       Text="{Binding Usuario.Peso}"
                       TextColor="White"
                       PlaceholderColor="#AAAAAA"
                       BackgroundColor="Transparent" />
            </Frame>

            <Frame CornerRadius="10" BackgroundColor="#1E1E1E" Padding="10">
                <Entry Placeholder="Altura (cm)"
                       Keyboard="Numeric"
                       Text="{Binding Usuario.Altura}"
                       TextColor="White"
                       PlaceholderColor="#AAAAAA"
                       BackgroundColor="Transparent" />
            </Frame>

            <!-- BotÃ³n Guardar -->
            <Button Text="Guardar Cambios"
                    Command="{Binding GuardarCambiosCommand}"
                    BackgroundColor="#00FF99"
                    TextColor="Black"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
