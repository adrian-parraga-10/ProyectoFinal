<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProyectoFinal.AdminShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProyectoFinal.Vista"
    Shell.FlyoutBehavior="Flyout"
    Title="ProyectoFinal">


    <Shell.FlyoutHeader>
        <Grid HeightRequest="100" BackgroundColor="{DynamicResource PrimaryColor}">
            <Image Source="icono.png" />
        </Grid>
    </Shell.FlyoutHeader>

 
    <ShellContent Route="AlimentosView"
        Icon="question.png"
        Title="Alimentos"
        ContentTemplate="{DataTemplate local:AlimentosView}" />

    <ShellContent Route="EjerciciosView"
        Icon="question.png"
        Title="Ejercicios"
        ContentTemplate="{DataTemplate local:EjerciciosView}" />

    <ShellContent Route="RutinasView"
        Icon="question.png"
        Title="Rutinas"
        ContentTemplate="{DataTemplate local:RutinasView}" />

</Shell>
